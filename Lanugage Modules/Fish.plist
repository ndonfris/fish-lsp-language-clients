    <!-- Identification -->
    <key>BBEditDocumentType</key>               <string>CodelessLanguageModule</string>
    <key>BBLMLanguageDisplayName</key>          <string>Fish Script</string>
    <key>BBLMLanguageCode</key>                 <string>fish</string>

    <!-- File Mapping -->
    <key>BBLMSuffixMap</key>
